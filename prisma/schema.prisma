datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas = ["auth", "public"]
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

model Documents {
  id String @id @default(uuid())
  title String
  user User @relation(fields: [userId], references: [id])
  userId String @unique
  isArchived Boolean @default(false)
  parentDocumentId String? @unique
  parentDocument Documents? @relation("ParentDocument", fields: [parentDocumentId], references: [id])
  parent Documents? @relation("ParentDocument")
  content String?
  coverImage String?
  icon String?
  isPublished Boolean @default(false)

  @@schema("public")
  @@index([userId], name: "by_user")
  @@index([userId, parentDocumentId], name: "by_user_parent")
}

model User {
  id String @default(uuid()) @id
  email String @unique
  name String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  documents Documents[]

  @@schema("auth")
}
