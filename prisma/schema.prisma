datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["public"]
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

model Documents {
  id                String      @id @default(uuid())
  title             String
  userId            String
  isArchived        Boolean     @default(false)
  parentDocumentId  String?     @unique
  parentDocument    Documents?  @relation("ParentDocument", fields: [parentDocumentId], references: [id])
  childrenDocuments Documents[] @relation("ParentDocument")
  content           String?
  coverImage        String?
  icon              String?
  isPublished       Boolean     @default(false)
  createdAt         DateTime    @default(now())

  @@index([userId], name: "by_user")
  @@index([userId, parentDocumentId], name: "by_user_parent")
  @@schema("public")
}
